<div>
    <%= render partial: 'user_prof', locals: {user:@user} %>
  <div class="user-card">

    <% @user.recent_post.each do |post| %>

        <h4>Title: <%= post.title %></h4>
        <%= link_to user_post_path(@user.id, post.id), id: "user_post#{post.id}" do %>
          <li>Text:<%= post.text.truncate(30) %></li>
        <% end %>
        <span>Comments: <%= post.comments.size || 0 %></span>
        <span>Likes: <%= post.likes.size %></span>

    <% end %>
  </div>
</div>

<div class='all_posts'>
  <button class='d-flex justify-content-center'>
    <%= link_to "See all posts" , user_post_path(@user) if @user.posts_counter> 0 %>
  </button>
</div>

